{
  "name": "billing-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "react-start": "react-scripts start",
    "start": "concurrently \"npm run react-start\" \"node backend/server.js\" \"wait-on http://localhost:3000 http://localhost:5000 && electron .\"",
    "react-build": "react-scripts build",
    "build": "npm run react-build && electron-builder"
  },
  "build": {
    "appId": "com.billing.app",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.2.1",
    "web-vitals": "^4.2.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
